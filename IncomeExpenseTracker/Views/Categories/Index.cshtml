@model IEnumerable<IncomeExpenseTracker.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentCategoryId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentCategoryId)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.id" class="text-success">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.id" class="text-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.id" class="text-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
